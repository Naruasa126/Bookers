<% if flash[:notice] %>
    <p id="notice">
      <%= flash[:notice] %>
    </p>
  <% end %>

<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>

  <p><strong>Title:</strong><%= @book.title %></p>

  <p><strong>Body:</strong><%= @book.body %></p>

  <%= link_to "Edit", edit_book_path(@book) %>
  <%= link_to "Back", books_path %>

<% end %>
